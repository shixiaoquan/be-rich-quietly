{
  "license": "MIT",
  "icon": "images/logo.png",
  "name": "be-rich-quietly",
  "displayName": "Be Rich Quietly",
  "description": "BE RICH QUIETLY, a VS Code extension that displays stock price in the status bar.",
  "version": "0.0.1",
  "publisher": "IKUN",
  "engines": {
    "vscode": "^1.95.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/shixiaoquan/be-rich-quietly"
  },
  "contributes": {
    "configuration": {
      "type": "object",
      "properties": {
        "stockPrice.stockCodes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "601012",
            "HK-01810",
            "US-GOOG"
          ],
          "description": "🚀 注入财富密码 🤩 ，注入规则 \n缅A：601012 ps:直接输入代码 \n港股：HK-01810 ps:HK-开头 \n美股：US-GOOG ps:US-开头"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "eslint": "^7.10.0",
    "typescript": "^4.0.3",
    "vscode": "^1.1.37",
    "vscode-test": "^1.4.0"
  },
  "dependencies": {
    "puppeteer": "^23.6.1"
  }
}
